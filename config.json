{
    "name": "Gesture_MergeNet",
    "n_gpu": 1,

    "arch": {
        "type": "MergeNet",
        "args": {
            "num_classes": 10,
            "finetune": "./finetune.pth"
        }
    },
    "data_loader": {
        "type": "GestureDataLoader",
        "args": {
            "data_dir": "data/gesture",
            "index_file": "index.txt",
            "batch_size": 1,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "CrossEntropyLoss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
